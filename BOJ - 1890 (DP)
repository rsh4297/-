n = int(input())
data = [[*map(int,input().split())] for _ in range(n)]
visit=[[0]*(n) for _ in range(n)]
for i in range(n):
    for j in range(n):
        if visit[i][j]==0 or (i==(n-1) and j==(n-1)):
            continue
        dist = data[i][j]
        down = dist+i
        right = dist+j
        if down<n:
            visit[down][j]+=visit[i][j]
        if right<n:
            visit[i][right]+=visit[i][j]
print(visit[n-1][n-1])
